# Copy this file to `.env` and fill in values. Do NOT commit secrets to source control.

# MongoDB (replace with your connection string)
MONGODB_URI=mongodb+srv://<dbuser>:<password>@cluster.example.mongodb.net/genai-training?retryWrites=true&w=majority

# Google OAuth credentials
GOOGLE_CLIENT_ID=<your-google-client-id>
GOOGLE_CLIENT_SECRET=<your-google-client-secret>

# Session secret for express-session (random long string)
SESSION_SECRET=<random-session-secret>

# Base URL for running the app locally
BASE_URL=http://localhost:3000

# Run mode: development or production
NODE_ENV=development
